<div>
  <%- if controller_name != 'sessions' %>
    <div class='row'>
      <%= button_to "Accedi", new_session_path(resource_name),class:"devise-btn devise-btn-outline-info", method: :get   %><br />
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class='row'>
      <%= button_to "Non hai un account? Registrati!", new_registration_path(resource_name),class:"devise-btn devise-btn-outline-info", method: :get  %><br />
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class='row'>
      <%= button_to "Password dimenticata?", new_password_path(resource_name),class:"devise-btn devise-btn-outline-info", method: :get  %><br />
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class='row'>
    <%= button_to "Non hai ricevuto le istruzioni di conferma?", new_confirmation_path(resource_name),class:"devise-btn devise-btn-outline-info", method: :get  %><br />
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class='row'>
    <%= button_to "Non hai ricevuto le istruzioni di sblocco?", new_unlock_path(resource_name),class:"devise-btn devise-btn-outline-info", method: :get %><br />
    </div>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <div class='row'>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Accedi con Google", omniauth_authorize_path(resource_name, provider),class:"devise-btn devise-btn-outline-info", method: :post, data: {turbo: "false"}%><br />
    <% end %>
    </div>
  <% end %>
</div>
